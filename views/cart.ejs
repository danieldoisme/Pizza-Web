<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Cart - PizzazzPizza</title>
  <!-- icons  -->
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
  <!-- bootstrap  -->
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
  <!-- swiper slider  -->
  <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css" />
  <!-- fancy box  -->
  <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css" />
  <!-- custom css  -->
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <style>
    table,
    th,
    tr,
    td {
      border: 2px solid black;
      padding: 8px 10px;
      border-radius: 20px;
    }

    a {
      color: white;
    }
  </style>
</head>

<body class="body-fixed">
  <%- include('partials/userNav') %>

  <div id="viewport">
    <div id="js-scroll-content">
      <section class="section" id="cart" style="background-image: url(/images/menu-bg.png)">
        <div class="container">
          <div class="row">
            <form action="/checkout" method="POST">
              <div class="col-lg-12">
                <div class="sec-title text-center mb-5">
                  <h2 class="h2-title">My Cart</h2>
                  <div class="sec-title-shape mb-4">
                    <img src="/images/title-shape.svg" alt="" />
                  </div>
                  <% let count=0; %> <% let total_price=0; %> <% let
                    total_items=0; %>
                  <table id="mycart">
                    <thead>
                      <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 10%">Product</th>
                        <th style="width: 40%">Product Name</th>
                        <th style="width: 10%">Price</th>
                        <th style="width: 5%">Quantity</th>
                        <th style="width: 20%">Sub-Total</th>
                        <th style="width: 10%">Action</th>
                      </tr>
                    </thead>
                    <tbody id="cart-body">
                      <% for (let i=0; i < items.length; i++) { %>
                      <tr id="cart-row-<%= items[i].item_id %>" data-row-index="<%= i %>">
                        <% count++ %>
                        <td class="row-number"><%= i + 1 %></td>
                        <td>
                          <img src="/images/dish/<%= items[i].item_img %>" alt="" style="
                                border-radius: 10%;
                                border: 2px solid rgb(68, 66, 66);
                                box-shadow: 4px 4px 8px black;
                              " />
                        </td>
                        <td>
                          <a href="/item/<%= items[i].item_id %>" style="color: inherit; text-decoration: none;">
                            <%= items[i].item_name %>
                          </a>
                        </td>
                        <td>
                          $
                          <span class="item-price">
                            <%= items[i].item_price %>
                          </span>
                        </td>
                        <td>
                          <input type="number" style="text-align: center" class="quantity form-input" name="quantity_display_<%= i %>" id="quantity_display_<%= i %>" value="1" min="1" onchange="updateData(this.value,'<%= i %>');" />
                        </td>
                        <td>
                          $
                          <span class="price">
                            <%= items[i].item_price %>
                          </span>
                        </td>
                        <td>
                          <button type="button" class="btn btn-danger btn-sm" onclick="removeFromCart('<%= items[i].item_id %>', '<%= i %>')">
                            Remove
                          </button>
                        </td>
                        <input type="hidden" name="itemid[]" value="<%= items[i].item_id %>" />
                        <input type="hidden" name="quantity[]" id="quantity_hidden_<%= i %>" value="1" />
                        <input type="hidden" name="subprice[]" id="subprice_hidden_<%= i %>" value="<%= items[i].item_price %>" />
                        <% total_price +=items[i].item_price %>
                      </tr>
                      <% } %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <td colspan="4"><strong>Total</strong></td>
                        <td id="total_quantity"><%= count %></td>
                        <span id="inital_quantity" style="display: hidden" hidden>
                          <%= count %>
                        </span>
                        <td id="total_price">$ <%= total_price %></td>
                        <span id="inital_price" style="display: hidden" hidden>
                          <%= total_price %>
                        </span>
                      </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
              <br />
              <br />
              <% if (count > 0) { %>
              <button type="submit" class="sec-btn sec-btn-orange" id="buyNowBtn" style="display: block; margin: 0 auto; width: 20%">
                Buy Now
              </button>
              <% } else { %>
              <button type="button" disabled class="sec-btn" style="
                    display: block;
                    margin: 0 auto;
                    width: 20%;
                    color: white;
                    background: #cccccc;
                    cursor: not-allowed;
                  ">
                Add items to cart first
              </button>
              <% } %>
              <script>
                document.addEventListener("DOMContentLoaded", function() {
                  const checkoutForm = document.querySelector(
                    'form[action="/checkout"]'
                  );

                  if (checkoutForm) {
                    checkoutForm.addEventListener("submit", function(event) {
                      // We want the form to just submit normally now
                      // Don't prevent default or clear cart
                    });
                  }
                });
              </script>
            </form>
          </div>
        </div>
      </section>

      <%- include('partials/footer') %>
    </div>
  </div>

  <script>
    function updateData(qty, i) {
      // Updating Sub Price Display
      const item_price = document.querySelectorAll(".item-price");
      const newPrice = parseInt(qty) * parseInt(item_price[i].innerHTML);
      document.querySelectorAll(".price")[i].innerHTML = newPrice;

      // Update hidden subprice input
      document.getElementById(`subprice_hidden_${i}`).value = newPrice;

      // Update hidden quantity input
      document.getElementById(`quantity_hidden_${i}`).value = qty;

      // Updating Total Quantity Display
      const quantity = document.querySelectorAll(".quantity");
      let total_qty = parseInt(0);
      for (let j = 0; j < quantity.length; j++) {
        total_qty += parseInt(quantity[j].value);
      }
      document.getElementById("total_quantity").innerHTML = total_qty;

      // Updating Total Price Display
      const price = document.querySelectorAll(".price");
      let total_price = parseInt(0);
      for (let j = 0; j < price.length; j++) {
        total_price += parseInt(price[j].innerHTML);
      }
      document.getElementById("total_price").innerHTML = "$ " + total_price;
    }
  </script>
  <script>
    function removeFromCart(itemId, index) {
      // Get current cart from localStorage
      let cart = JSON.parse(localStorage.getItem("cart") || "[]");
      let itemCount = parseInt(localStorage.getItem("item_count") || "0");

      // Remove item from cart array
      const itemIndex = cart.indexOf(itemId);
      if (itemIndex > -1) {
        cart.splice(itemIndex, 1);
      }

      // Update item count
      itemCount = Math.max(0, itemCount - 1);

      // Update localStorage
      localStorage.setItem("cart", JSON.stringify(cart));
      localStorage.setItem("item_count", itemCount);

      // Update the cart count display
      document.getElementById("cart-number-count").innerHTML = itemCount;

      // Remove the row from the table
      const row = document.getElementById(`cart-row-${itemId}`);
      if (row) {
        row.remove();
      }

      // Update row numbers
      updateRowNumbers();

      // Recalculate totals
      updateTotals();

      // Send update to server (optional)
      updateServerCart(cart, itemCount);
    }

    function updateRowNumbers() {
      // Get all remaining rows
      const rows = document.querySelectorAll("#cart-tbody tr");

      // Update row numbers
      rows.forEach((row, index) => {
        const rowNumberCell = row.querySelector(".row-number");
        if (rowNumberCell) {
          rowNumberCell.textContent = index + 1;
        }
        // Update data attribute for future reference
        row.setAttribute("data-row-index", index);
      });

      // Check if cart is empty and update UI accordingly
      if (rows.length === 0) {
        // If no items left, reload the page to show "Add items to cart first" button
        // alternatively you could manipulate the DOM to show/hide buttons
        location.reload();
      }
    }

    function updateTotals() {
      // Updating Total Quantity
      const quantity = document.querySelectorAll(".quantity");
      let total_qty = 0;
      for (let j = 0; j < quantity.length; j++) {
        total_qty += parseInt(quantity[j].value);
      }
      document.getElementById("total_quantity").innerHTML = total_qty;

      // Updating Total Price
      const price = document.querySelectorAll(".price");
      let total_price = 0;
      for (let j = 0; j < price.length; j++) {
        total_price += parseInt(price[j].innerHTML);
      }
      document.getElementById("total_price").innerHTML = "$ " + total_price;
    }

    function updateServerCart(cart, itemCount) {
      fetch("/updateCart", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          cart: cart,
          item_count: itemCount,
        }),
      });
    }
  </script>
  <script>
    // Update the cart count in localStorage to match server count
    document.addEventListener("DOMContentLoaded", function() {
      const count = "<%= item_count %>";
      localStorage.setItem("item_count", count);
      document.getElementById("cart-number-count").innerHTML = count;
    });
  </script>
