<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Welcome - PizzazzPizza</title>
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
  <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css" />
  <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body class="body-fixed">
  <%- include('partials/userNav') %>

  <section style="background-image: url(images/menu-bg.png)" class="our-menu section bg-light repeat-img" id="menu">
    <div class="sec-wp">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="sec-title text-center mb-5">
              <p class="sec-sub-title mb-3">Our Menu</p>
              <h2 class="h2-title">
                Taste the heart of Italy, one slice at a time.
                <span>Delicious Pizza</span>
              </h2>
              <div class="sec-title-shape mb-4">
                <img src="/images/title-shape.svg" alt="" />
              </div>
            </div>
          </div>
        </div>

        <% if (typeof promotionBanners !== 'undefined' && promotionBanners.length > 0) { %>
        <section class="promotion-banner-section section" style="background-image: url(/images/menu-bg.png);">
          <div class="container">
            <div class="swiper-container promotion-banner-slider">
              <div class="swiper-wrapper">
                <% promotionBanners.forEach(function(banner) { %>
                <div class="swiper-slide">
                  <img src="/images/banner-image/<%= banner.banner_id %>" alt="<%= banner.alt_text || 'Promotional Banner' %>">
                </div>
                <% }); %>
              </div>
              <div class="swiper-pagination"></div>
            </div>
          </div>
        </section>
        <% } %>

        <div class="menu-tab-wp">
          <div class="row">
            <div class="col-lg-12 m-auto">
              <div class="menu-tab text-center">
                <ul class="filters">
                  <div class="filter-active"></div>
                  <li class="filter" data-filter="all">
                    <img src="/images/menu-1.svg" alt="" />
                    All
                  </li>
                  <li class="filter" data-filter=".pizzas">
                    <img src="/images/menu-2.svg" alt="" />
                    Pizzas
                  </li>
                  <li class="filter" data-filter=".appetizers">
                    <img src="/images/menu-3.svg" alt="" />
                    Appetizers
                  </li>
                  <li class="filter" data-filter=".desserts">
                    <img src="/images/menu-4.svg" alt="" />
                    Desserts
                  </li>
                  <li class="filter" data-filter=".beverages">
                    <img src="/images/menu-5.svg" alt="" />
                    Beverages
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="menu-list-row">
          <div class="row g-xxl-5" id="menu-dish" style="background-image: url(/images/menu-bg.png)">
            <% for (let i = 0; i < items.length; i++) { %>
            <div class="col-lg-4 col-sm-6 dish-box-wp <%= items[i].item_category.toLowerCase() %>">
              <div class="dish-box text-center">
                <div class="dist-img">
                  <a href="/item/<%= items[i].item_id %>">
                    <img src="/images/item-image/<%= items[i].item_id %>" alt="<%= items[i].item_name %>" onerror="this.onerror=null; this.src='/images/dish/default-pizza.jpg';" />
                  </a>
                </div>
                <div class="dish-rating">
                  <%= Number(items[i].item_rating).toFixed(1) %>
                  <i class="uil uil-star"></i>
                  <span style="font-size: 0.8em; color: #777;">(<%= items[i].total_ratings %> review<%= items[i].total_ratings !== 1 ? "s" : "" %>)</span>
                </div>
                <div class="dish-title">
                  <h3 class="h3-title">
                    <a href="/item/<%= items[i].item_id %>" class="stretched-link-custom"><%= items[i].item_name %></a>
                  </h3>
                  <p><%= items[i].item_calories %> kcal</p>
                </div>
                <div class="dish-info">
                  <ul>
                    <li>
                      <p>Type</p>
                      <b> <%= items[i].item_type %> </b>
                    </li>
                    <li>
                      <p>Persons</p>
                      <b> <%= items[i].item_serving %> </b>
                    </li>
                  </ul>
                </div>
                <div class="dist-bottom-row">
                  <ul>
                    <li>
                      <b>$ <%= parseFloat(items[i].item_price).toFixed(2) %></b>
                    </li>
                    <li>
                      <button class="dish-add-btn" id="btn<%= items[i].item_id %>" onclick="addToCart('<%= items[i].item_id %>')">
                        <i class="uil uil-plus"></i>
                      </button>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script src="/javascripts/jquery-3.5.1.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/popper.min.js"></script>
  <script src="/javascripts/font-awesome.min.js"></script>
  <script src="/javascripts/swiper-bundle.min.js"></script>
  <script src="/javascripts/jquery.mixitup.min.js"></script>
  <script src="/javascripts/jquery.fancybox.min.js"></script>
  <script src="/javascripts/parallax.min.js"></script>
  <script src="/javascripts/gsap.min.js"></script>
  <script src="/javascripts/ScrollTrigger.min.js"></script>
  <script src="/javascripts/ScrollToPlugin.min.js"></script>
  <script src="/javascripts/smooth-scroll.js"></script>
  <script src="/javascripts/main.js"></script>
  <script src="/javascripts/cart.js"></script>
</body>

</html>