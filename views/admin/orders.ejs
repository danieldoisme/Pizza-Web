<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Orders Management - PizzazzPizza</title>
  <!-- icons  -->
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
  <!-- bootstrap  -->
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
  <!-- swiper slider  -->
  <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css" />
  <!-- fancy box  -->
  <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css" />
  <!-- custom css  -->
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <style>
    table,
    th,
    tr,
    td {
      border: 2px solid black;
      padding: 8px 10px;
      border-radius: 20px;
    }

    .order-items-table th,
    .order-items-table td {
      border-radius: 0px !important;
    }
  </style>
</head>

<body class="body-fixed admin-active">
  <div class="admin-layout">
    <%- include('../partials/adminSidebar') %>
    <div class="admin-main-content">
      <div id="viewport">
        <div id="js-scroll-content">
          <section class="section" id="orders-management" style="background-image: url(/images/menu-bg.png)">
            <div class="container">
              <div class="row">
                <div class="col-lg-12">
                  <div class="sec-title text-center mb-5">
                    <h2 class="h2-title">View & Dispatch Orders</h2>
                    <div class="sec-title-shape mb-4">
                      <img src="/images/title-shape.svg" alt="" />
                    </div>
                  </div>

                  <% if (!orders || orders.length === 0) { %>
                  <div class="text-center" style="
                        padding: 20px;
                        background-color: #f8f9fa;
                        border-radius: 8px;
                        margin: 20px 0;
                      ">
                    <h4>No Orders Are Pending</h4>
                  </div>
                  <% } else { %> <% orders.forEach(function(order, index) { %>
                  <div class="order-group admin-order-group" style="
                        margin-bottom: 30px;
                        border: 1px solid #ddd;
                        padding: 20px;
                        border-radius: 8px;
                        background-color: #fff;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                      ">
                    <div style="
                          display: flex;
                          justify-content: space-between;
                          align-items: center;
                          border-bottom: 1px solid #eee;
                          padding-bottom: 15px;
                          margin-bottom: 15px;
                        ">
                      <h4 style="
                            color: #ff8243;
                            margin-bottom: 0;
                            font-size: 1.5rem;
                          ">
                        Order #<%= order.order_id %>
                      </h4>
                      <div class="dispatch-control" style="text-align: right">
                        <label for="dispatch_<%= order.order_id %>" style="
                              margin-right: 8px;
                              font-weight: bold;
                              color: #555;
                              cursor: pointer;
                            ">Dispatch:</label>
                        <input type="checkbox" class="dispatch
                          form-check-input" name="<%= order.order_id %>" id="dispatch_<%= order.order_id %>" value="true" onchange="checkingDispatch()" <% if
                          (order.order_status !== 'Pending' &&
                          order.order_status !== 'Processing') { %>disabled<% }
                          %> style="transform: scale(1.3); vertical-align:
                          middle; cursor: pointer;" />
                      </div>
                    </div>

                    <div class="order-details-grid" style="
                          display: grid;
                          grid-template-columns: repeat(
                            auto-fit,
                            minmax(230px, 1fr)
                          );
                          gap: 10px 20px;
                          margin-bottom: 20px;
                          font-size: 0.95rem;
                        ">
                      <p style="margin: 5px 0">
                        <strong>Customer:</strong><br /><%= order.user_name %>
                        (<%= order.user_id %>)
                      </p>
                      <p style="margin: 5px 0">
                        <strong>Date/Time:</strong><br /><%= new
                          Date(order.order_date).toLocaleString() %>
                      </p>
                      <p style="margin: 5px 0">
                        <strong>Total:</strong><br />$<%=
                          parseFloat(order.total_amount).toFixed(2) %>
                      </p>
                      <p style="margin: 5px 0">
                        <strong>Payment Method:</strong><br /><%=
                          order.payment_method %>
                      </p>
                      <p style="margin: 5px 0">
                        <strong>Payment Status:</strong><br /><%=
                          order.payment_status %>
                      </p>
                      <p style="margin: 5px 0">
                        <strong>Status:</strong><br /><span style="font-weight:bold; padding: 3px 8px; border-radius: 4px; color: white; background-color: <%= order.order_status === "Pending" ? "#ffc107" : (order.order_status === "Processing" ? "#007bff" : (order.order_status === "Dispatched" ? "#17a2b8" : (order.order_status === "Delivered" ? "#28a745" : (order.order_status === "Cancelled" ? "#dc3545" : "#6c757d")))) %>"><%= order.order_status %></span>
                      </p>
                      <% if (order.delivery_date) { %>
                      <p style="margin: 5px 0">
                        <strong>Delivery Date:</strong><br /><%= new
                          Date(order.delivery_date).toLocaleString() %>
                      </p>
                      <% } %>
                      <p style="margin: 5px 0; grid-column: 1 / -1">
                        <strong>Shipping Address:</strong><br /><%=
                          order.shipping_address %>
                      </p>
                      <% if (order.notes && order.notes.trim() !== "") { %>
                      <p style="margin: 5px 0; grid-column: 1 / -1">
                        <strong>Notes:</strong><br /><%=
                          order.notes %>
                      </p>
                      <% } %>
                    </div>

                    <div class="admin-order-actions" style="
                          margin-top: 15px;
                          padding-top: 15px;
                          border-top: 1px solid #eee;
                          display: flex;
                          flex-wrap: wrap; 
                          gap: 10px;
                        ">
                      <% if (order.order_status === 'Pending') { %>
                      <form action="/admin/order/set-processing/<%= order.order_id %>" method="POST" style="margin: 0">
                        <button type="submit" class="btn btn-sm btn-primary">
                          Mark as Processing
                        </button>
                      </form>
                      <% } %>
                      <% if (order.payment_method === 'COD' && order.payment_status === 'Unpaid' && ['Processing', 'Dispatched', 'Delivered'].includes(order.order_status)) { %>
                      <form action="/admin/order/mark-paid-cod/<%= order.order_id %>" method="POST" style="margin: 0;">
                        <button type="submit" class="btn btn-sm btn-info">
                          Mark as Paid (COD)
                        </button>
                      </form>
                      <% } %>
                      <% if (order.order_status === 'Dispatched') { %>
                      <form action="/admin/order/set-delivered-admin/<%= order.order_id %>" method="POST" style="margin: 0">
                        <button type="submit" class="btn btn-sm btn-success">
                          Mark as Delivered
                        </button>
                      </form>
                      <% } %>
                    </div>

                    <% if (order.items && order.items.length > 0) { %>
                    <h5 style="
                          margin-top: 20px;
                          margin-bottom: 10px;
                          color: #333;
                          font-size: 1.1rem;
                          border-top: 1px solid #eee;
                          padding-top: 15px;
                        ">
                      Items in this order:
                    </h5>
                    <div class="table-responsive">
                      <table class="order-items-table table table-sm table-hover" style="
                            width: 100%;
                            margin-top: 0px;
                            border-collapse: collapse;
                            background-color: #fdfdfd;
                            font-size: 0.9rem;
                          ">
                        <thead style="background-color: #e9ecef">
                          <tr>
                            <th style="
                                  padding: 8px 10px;
                                  text-align: left;
                                  border-bottom: 2px solid #dee2e6;
                                ">
                              Item Name
                            </th>
                            <th style="
                                  padding: 8px 10px;
                                  text-align: center;
                                  border-bottom: 2px solid #dee2e6;
                                ">
                              Quantity
                            </th>
                            <th style="
                                  padding: 8px 10px;
                                  text-align: right;
                                  border-bottom: 2px solid #dee2e6;
                                ">
                              Price/Item
                            </th>
                            <th style="
                                  padding: 8px 10px;
                                  text-align: right;
                                  border-bottom: 2px solid #dee2e6;
                                ">
                              Subtotal
                            </th>
                          </tr>
                        </thead>
                        <tbody>
                          <% order.items.forEach(function(item) { %>
                          <tr style="border-bottom: 1px solid #f1f1f1">
                            <td style="padding: 8px 10px">
                              <%= item.item_name %>
                            </td>
                            <td style="padding: 8px 10px; text-align: center">
                              <%= item.quantity %>
                            </td>
                            <td style="padding: 8px 10px; text-align: right">
                              $<%= parseFloat(item.price_per_item).toFixed(2)
                                %>
                            </td>
                            <td style="padding: 8px 10px; text-align: right">
                              $<%= parseFloat(item.subtotal).toFixed(2) %>
                            </td>
                          </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                    <% } else { %>
                    <p style="margin-top: 15px; color: #777">
                      No items found for this order.
                    </p>
                    <% } %>
                  </div>
                  <% }); %> <% } %>

                  <div style="
                        text-align: center;
                        margin-top: 40px;
                        margin-bottom: 20px;
                      ">
                    <button class="sec-btn" onclick="dispatching()" style="color: white; background: orange">
                      Dispatch Selected Orders
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>

  <script>
    let order_id = [];

    function checkingDispatch() {
      order_id = []; // Reset the array
      const checking = document.querySelectorAll(
        ".dispatch.form-check-input"
      );
      for (let index = 0; index < checking.length; index++) {
        if (checking[index].checked) {
          order_id.push(checking[index].name);
        }
      }
    }

    function dispatching() {
      if (order_id.length === 0) {
        alert("Please select at least one order to dispatch.");
        return;
      }

      // Optional: Add a confirmation dialog
      // if (!confirm(`Are you sure you want to dispatch ${order_id.length} order(s)?`)) {
      //   return;
      // }

      const dispatchButton = document.querySelector(
        'button.sec-btn[onclick="dispatching()"]'
      );
      if (dispatchButton) dispatchButton.disabled = true;
      document.body.style.cursor = "wait";

      fetch("/admin/dispatch_orders", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            order_id_s: order_id
          }),
        })
        .then((response) => {
          if (response.ok) {
            // Server handles the redirect on success (e.g., to /admin/orders?success=...).
            // The browser will follow this redirect.
            // Consume the response body. For a redirect, it might be the HTML of the new page.
            return response.text();
          } else {
            // Attempt to get a more specific error message from the server response body
            return response.text().then((text) => {
              throw new Error(text || `Server error: ${response.status}`);
            });
          }
        })
        .then((text) => {
          // This block executes if response.ok was true.
          // Force a navigation to the orders page with a cache-busting query parameter
          // to ensure the view is updated with the latest changes.
          window.location.href = '/admin/orders?t=' + new Date().getTime();
        })
        .catch((error) => {
          console.error("Error dispatching orders:", error);
          alert(
            "There was a problem dispatching the orders: " + error.message
          );
        })
        .finally(() => {
          if (dispatchButton) dispatchButton.disabled = false;
          document.body.style.cursor = "default";
          // The page should reload due to the server's redirect on success.
          // If it didn't, and a manual reload was needed: window.location.reload();
        });
    }
  </script>

  <!-- jquery  -->
  <script src="/javascripts/jquery-3.5.1.min.js"></script>
  <!-- bootstrap -->
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/popper.min.js"></script>
  <!-- fontawesome  -->
  <script src="/javascripts/font-awesome.min.js"></script>
  <!-- swiper slider  -->
  <script src="/javascripts/swiper-bundle.min.js"></script>
  <!-- mixitup -- filter  -->
  <script src="/javascripts/jquery.mixitup.min.js"></script>
  <!-- fancy box  -->
  <script src="/javascripts/jquery.fancybox.min.js"></script>
  <!-- parallax  -->
  <script src="/javascripts/parallax.min.js"></script>
  <!-- gsap  -->
  <script src="/javascripts/gsap.min.js"></script>
  <!-- scroll trigger  -->
  <script src="/javascripts/ScrollTrigger.min.js"></script>
  <!-- scroll to plugin  -->
  <script src="/javascripts/ScrollToPlugin.min.js"></script>
  <!-- smooth scroll  -->
  <script src="/javascripts/smooth-scroll.js"></script>
  <!-- custom js  -->
  <script src="/javascripts/main.js"></script>
</body>

</html>