<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Price - PizzazzPizza</title>
    <!-- icons  -->
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <!-- swiper slider  -->
    <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css" />
    <!-- fancy box  -->
    <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css" />
    <!-- custom css  -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="body-fixed">
    <%- include('../partials/adminNav') %>

    <div id="viewport">
      <div id="js-scroll-content">
        <section
          class="section"
          id="change-price"
          style="background-image: url(/images/menu-bg.png)"
        >
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <div class="sec-title text-center mb-5">
                  <h2 class="h2-title">Change Food Price</h2>
                  <div class="sec-title-shape mb-4">
                    <img src="/images/title-shape.svg" alt="" />
                  </div>
                  <form
                    action="/admin/changePrice"
                    method="post"
                    enctype="multipart/form-data"
                  >
                    <label for="foods_price">
                      <select
                        name="item_name"
                        id="item_name"
                        class="form-input"
                      >
                        <option value="None">Select Food</option>
                        <% let size=items.length; %> <% for (let i = 0; i <
                        size; i++) { %>
                        <option value="<%= items[i].item_name %>">
                          <%= items[i].item_name %>
                        </option>
                        <% } %>
                      </select>
                    </label>
                    <br /><br />
                    <input
                      type="text"
                      placeholder="Enter New Food Price"
                      required
                      class="form-input"
                      name="NewFoodPrice"
                      id="NewFoodPrice"
                      style="width: 300px"
                    /><br /><br />
                    <input
                      type="submit"
                      value="Update Price"
                      class="sec-btn"
                      style="color: white; background: orange"
                    /><br />
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>

        <%- include('../partials/footer') %>
      </div>
    </div>

    <!-- jquery  -->
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <!-- bootstrap -->
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <!-- fontawesome  -->
    <script src="/javascripts/font-awesome.min.js"></script>
    <!-- swiper slider  -->
    <script src="/javascripts/swiper-bundle.min.js"></script>
    <!-- mixitup -- filter  -->
    <script src="/javascripts/jquery.mixitup.min.js"></script>
    <!-- fancy box  -->
    <script src="/javascripts/query.fancybox.min.js"></script>
    <!-- parallax  -->
    <script src="/javascripts/parallax.min.js"></script>
    <!-- gsap  -->
    <script src="/javascripts/gsap.min.js"></script>
    <!-- scroll trigger  -->
    <script src="/javascripts/ScrollTrigger.min.js"></script>
    <!-- scroll to plugin  -->
    <script src="/javascripts/ScrollToPlugin.min.js"></script>
    <!-- smooth scroll  -->
    <script src="/javascripts/smooth-scroll.js"></script>
    <!-- custom js  -->
    <script src="/javascripts/main.js"></script>
  </body>
</html>
