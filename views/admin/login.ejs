<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Log In - PizzazzPizza</title>
    <!-- for icons  -->
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <!-- for swiper slider  -->
    <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css" />
    <!-- fancy box  -->
    <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css" />
    <!-- custom css  -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="body-fixed">
    <!-- Header starts  -->
    <header class="site-header">
      <div class="container">
        <div class="row">
          <div class="col-lg-2">
            <div class="header-logo">
              <a href="/">
                <img
                  src="/images/logo.svg"
                  style="max-width: 100%; height: auto"
                  alt="PizzazzPizza Logo"
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Header ends  -->

    <div id="viewport">
      <div id="js-scroll-content">
        <!-- Log In starts  -->
        <section
          class="section"
          style="background-image: url(/images/menu-bg.png)"
        >
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <div class="sec-title text-center mb-5">
                  <h2 class="h2-title">
                    <span style="color: orange; display: inline">Admin</span>
                    Log In
                  </h2>
                  <div class="sec-title-shape mb-4">
                    <img src="/images/title-shape.svg" alt="" />
                  </div>
                  <form action="/admin/login" method="post">
                    <input
                      type="text"
                      placeholder="Enter your Admin Email"
                      name="email"
                      required
                      class="form-input"
                      style="width: 450px"
                    /><br /><br />
                    <input
                      type="password"
                      placeholder="Password"
                      name="password"
                      required
                      class="form-input"
                      style="width: 450px"
                    /><br /><br />
                    <input
                      type="submit"
                      value="Log In"
                      class="sec-btn"
                      style="color: white; background: orange"
                    /><br />
                  </form>
                  <br />
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- Log In ends  -->

        <%- include('../partials/footer') %>
      </div>
    </div>

    <!-- jquery  -->
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <!-- bootstrap -->
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <!-- fontawesome  -->
    <script src="/javascripts/font-awesome.min.js"></script>
    <!-- swiper slider  -->
    <script src="/javascripts/swiper-bundle.min.js"></script>
    <!-- mixitup -- filter  -->
    <script src="/javascripts/jquery.mixitup.min.js"></script>
    <!-- fancy box  -->
    <script src="/javascripts/query.fancybox.min.js"></script>
    <!-- parallax  -->
    <script src="/javascripts/parallax.min.js"></script>
    <!-- gsap  -->
    <script src="/javascripts/gsap.min.js"></script>
    <!-- scroll trigger  -->
    <script src="/javascripts/ScrollTrigger.min.js"></script>
    <!-- scroll to plugin  -->
    <script src="/javascripts/ScrollToPlugin.min.js"></script>
    <!-- smooth scroll  -->
    <script src="/javascripts/smooth-scroll.js"></script>
    <!-- custom js  -->
    <script src="/javascripts/main.js"></script>
  </body>
</html>
